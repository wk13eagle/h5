@import "../base.styl"

.dk-loading
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  z-index 1000

  > p
    width $(128px)
    height $(28px)
    text-align center
    position absolute
    left 50%
    top 50%
    margin $(-128px) 0 0 $(-64px)
    background rgba(255,255,255,0.9)
    padding $(50px) 0
    border-radius 50%
    transform scale(0.8)
    box-shadow 0 0 $(60px) rgba(0,100,152,0.2)

    > em
        font-style normal
        position absolute
        z-index 10
        font-size $(28px)
        bottom 0
        left 0
        width 100%
        text-align center
        color #00a3e7

    > span
        display inline-block
        width $(8px)
        height 100%
        margin 0 $(2px)
        border-radius $(8px)
        background #28cd9a
        -webkit-animation load 1s ease infinite

        &:nth-child(2)
          -webkit-animation-delay 0.2s
        &:nth-child(3)
          -webkit-animation-delay 0.4s
        &:nth-child(4)
          -webkit-animation-delay 0.6s
        &:nth-child(5)
          -webkit-animation-delay 0.8s

@-webkit-keyframes load
  0%, 100%
    height $(28px)
    background #28cd9a
  50%
    height $(60px)
    margin $(-16px) $(2px)
    background #19b8e5

.dk-fade-enter-active,
.dk-fade-leave-active
  transition all .3s ease-in-out

.dk-fade-enter,
.dk-fade-leave-active
  transform scale(0.5)
  opacity 0
